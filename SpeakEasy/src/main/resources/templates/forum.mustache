<!DOCTYPE HTML>
<html lang="en">
    <head>
        <meta charset=utf-8>
        <title>{{ forumTitle }}</title>
    </head>
    <body>
        <div id="header">
            <h1> {{ forumTitle }} </h1>
            <p> {{ description }} </p>
        </div>
        <div id="container">
            <h2>Current user: {{ user }}</h2>
            <h2>Current conversations:</h2>
            {{ #children }}
                <p><a href="http://localhost:8080/{{ forumTitle }}/{{ title }}">{{ title }}</a> : {{ body }}</p>
            {{ /children }}
        </div>
        <div id="footer">
            {{> login }}
            {{> submit }}
            <div id="delete-forum">
                <h3>Delete Post</h3>
                <form action="/delete" method="post">
                    <input type="hidden" name="type_to_delete" value="post">
                    <input type="text" name="delete_submission_title" placeholder="Title or ID of submission to delete..." />
                    <button type="submit">Delete</button>
                </form>
            </div>
        </div>
    </body>
</html>